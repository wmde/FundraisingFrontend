{% extends 'Base_Layout.html.twig' %}
{% set title = site_metadata.page_titles[page_id] %}

{% block main %}
	<div id="app">
		<noscript>
			<h2>{$ site_metadata.no_javascript_header $}</h2>
			{$ web_content( 'pages/no_javascript' ) $}
		</noscript>
	</div>
	<div id="appdata"
		 data-page-title="{$ title | e('html_attr') $}"
		 data-application-vars="{$ supporters|e('html_attr') $}"
		 data-application-messages="{$ translations()|e('html_attr') $}"
		 data-assets-path="{$ asset( '', 'skin') $}"
		 class="is-hidden">
	</div>
{% endblock %}


{% block scripts %}
	{$ parent() $}
	<script src="{$ asset( 'js/supporters.js', 'skin' ) $}"></script>
{% endblock %}
