{% extends 'Base_Layout.html.twig' %}

{% block main %}
		<section id="error-page">
			<div class="container clearfix">
				<div class="ltcol">
					&nbsp;
				</div>

				<div class="ctcol">
					<div class="box partial rounded no-margin">
						<div class="box-header container clearfix">
							<span class="icon-bug f-left">{$ 'error_page_header' | trans $}</span>
						</div>

						<div class="box-section box-footer">
							<div class="container clearfix">
								<p>
									{$ 'error_page' | trans $}
								</p>
								{% if message is defined %}
								<p>
									{$ message $}
								</p>
								{% endif %}
							</div>
						</div>

					</div>

				</div>

				<div class="rtcol">
					<div class="icon-hand-right _icon-list-item last">
						<p>
							<strong>Spenden</strong>
						</p>
						<p>
							<a href="{$ path( '/' ) $}" target="_blank">{$ 'back_to_donation' | trans $}</a>
						</p>
					</div>
				</div>
			</div>
		</section>
{% endblock %}