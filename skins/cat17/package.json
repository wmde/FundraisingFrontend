{
  "name": "wmde_fundraising_cat17",
  "version": "1.0.0",
  "description": "WMDE fundraising application (end user facing part)",
  "main": "index.js",
  "directories": {
    "lib": "src/app/lib",
    "test": "src/app/tests"
  },
  "scripts": {
    "watch": "gulp watch",
    "watch-faq": "watchify -vd -p browserify-hmr -e faq-page/src/main.js -o ../../web/skins/cat17/scripts/faq.js",
    "build-faq": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o ../../web/skins/cat17/css/faq.css ] -e faq-page/src/main.js | uglifyjs -c warnings=false -m > ../../web/skins/cat17/scripts/faq.js",
    "lint": "eslint --ext .js,.vue src",
    "test": "tape 'src/app/tests/**/*.js' | tap-min",
    "cs": "jshint src/app && jscs src/app",
    "ci": "npm run cs && npm run test && npm run build-assets",
    "build-assets": "cross-env NODE_ENV=production gulp && npm run build-faq"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wmde/FundraisingFrontend.git"
  },
  "keywords": [
    "fundraising"
  ],
  "author": "",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/wmde/FundraisingFrontend/issues"
  },
  "homepage": "https://github.com/wmde/FundraisingFrontend#readme",
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.24.7",
    "browserify": "^13.0.0",
    "browserify-hmr": "^0.3.6",
    "browserify-shim": "^3.8.12",
    "cross-env": "^5.2.0",
    "deep-freeze": "0.0.1",
    "envify": "^3.4.0",
    "eslint": "^3.3.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-changed": "^3.2.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-cli": "^1.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-environments": "^0.1.2",
    "gulp-file-include": "^1.1.0",
    "gulp-flatten": "^0.3.1",
    "gulp-imagemin": "^3.3.0",
    "gulp-inject": "^4.3.2",
    "gulp-jshint": "^2.1.0",
    "gulp-nunjucks-render": "^2.2.2",
    "gulp-sass": "^3.2.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-sync": "^0.1.4",
    "gulp-uglify": "^3.0.1",
    "gulplog": "^1.0.0",
    "jscs": "^2.10.1",
    "jshint": "^2.9.6",
    "sinon": "^1.17.3",
    "tap-min": "^1.1.0",
    "tape": "^4.9.1",
    "tape-catch": "^1.0.6",
    "uglify-js": "^2.5.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vueify": "^9.0.0",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "bootstrap-select": "^1.13.2",
    "jcf": "^1.2.3",
    "jquery": "^3.3.1",
    "object-assign": "^4.0.1",
    "polyfill": "^0.1.0",
    "promise": "^7.3.1",
    "redux": "^3.7.2",
    "redux-promise": "^0.5.3",
    "underscore": "^1.9.1",
    "underscore.path": "^0.1.4",
    "vue": "^2.5.17"
  },
  "browserify": {
    "browser": {
      "vue": "vue/dist/vue.common.js"
    },
    "transform": [
      "vueify",
      "babelify",
      "browserify-shim",
      "envify"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  }
}
