{
  "name": "wmde_fundraising_cat17",
  "version": "1.0.0",
  "description": "WMDE fundraising application (end user facing part)",
  "main": "index.js",
  "directories": {
    "lib": "src/app/lib",
    "test": "src/app/tests"
  },
  "scripts": {
    "clean": "rimraf web/scripts web/css web/assets",
    "watch": "npm-run-all watch-faq webpack-watch-assets",
    "watch-faq": "watchify -vd -p browserify-hmr -e faq-page/src/main.js -o ../../web/skins/cat17/scripts/faq.js",
    "build-faq": "mkdirp web/scripts && cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o web/css/faq.css ] -e faq-page/src/main.js | uglifyjs -c warnings=false -m > web/scripts/faq.js",
    "build-donation": "mkdirp web/scripts && cross-env NODE_ENV=production browserify -g envify -e src/app/donation.js | uglifyjs -c warnings=false -m > web/scripts/donation.js",
    "test": "tape 'src/app/tests/**/*.js' | tap-min",
    "cs": "eslint --ext .js,.vue src/app faq-page",
    "ci": "npm-run-all --parallel cs test build-assets",
    "build-assets": "npm-run-all clean --parallel webpack-build-assets build-css build-faq build-donation",
    "build-sass": "node-sass --output-style compressed -o web/css --include-path node_modules src/sass/main.scss",
    "optimize-css": "postcss -r web/css",
    "build-css": "npm run build-sass && npm run optimize-css",
    "webpack-build-assets": "webpack --env production",
    "webpack-watch-assets": "webpack --watch --env development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wmde/FundraisingFrontend.git"
  },
  "keywords": [
    "fundraising"
  ],
  "author": "",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/wmde/FundraisingFrontend/issues"
  },
  "homepage": "https://github.com/wmde/FundraisingFrontend#readme",
  "devDependencies": {
    "@csstools/postcss-sass": "^3.0.0",
    "autoprefixer": "^9.2.0",
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "browserify-hmr": "^0.3.6",
    "browserify-shim": "^3.8.12",
    "copy-webpack-plugin": "^4.5.3",
    "cross-env": "^5.2.0",
    "deep-freeze": "0.0.1",
    "envify": "^3.4.0",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-config-wikimedia": "^0.8.1",
    "eslint-plugin-html": "^4.0.6",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^2.0.0",
    "glob": "^7.1.3",
    "imagemin-webpack-plugin": "^2.3.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.0.0",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^1.17.3",
    "tap-min": "^1.1.0",
    "tape": "^4.9.1",
    "tape-catch": "^1.0.6",
    "uglify-js": "^2.5.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "vueify": "^9.0.0",
    "watchify": "^3.11.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-concat-plugin": "^3.0.0",
    "webpack-config-utils": "^2.3.1"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "bootstrap-select": "^1.13.3",
    "jcf": "^1.2.3",
    "jquery": "^3.3.1",
    "object-assign": "^4.0.1",
    "polyfill": "^0.1.0",
    "promise": "^7.3.1",
    "redux": "^3.7.2",
    "redux-promise": "^0.5.3",
    "redux-vue": "^0.7.0",
    "underscore": "^1.9.1",
    "underscore.path": "^0.1.4",
    "vue": "^2.5.17"
  },
  "browserify": {
    "browser": {
      "vue": "vue/dist/vue.common.js"
    },
    "transform": [
      "vueify",
      "babelify",
      "browserify-shim",
      "envify"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  }
}
