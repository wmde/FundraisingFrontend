<div class="field-grp field-iban field-dynamic">
	<input type="text" id="iban" name="iban" placeholder="{$ 'iban_or_bank_account' | trans | e( 'html_attr' ) $}">
	<label for="iban">{$ 'iban_or_bank_account_prompt' | trans $}</label>
</div>
<div class="field-grp field-bic field-dynamic">
	<input type="text" id="bic" name="bic" placeholder="{$ 'bic_or_bank_number' | trans | e( 'html_attr' ) $}"
		   data-pattern="^[A-Z]{4}[A-Z]{2}[A-Z0-9]{2}([A-Z0-9]{3})?$" data-optional="true">
	<label for="bic">{$ 'bic_or_bank_number' | trans $}</label>
</div>

<span id="bank-name"></span>
<input type="hidden" name="bankname" id="field-bank-name" value="" />

<span class="error-text">{$ 'form_bankdata_error' | trans $}</span>
