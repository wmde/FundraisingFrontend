{
	"name": "wmde/fundraising-frontend",
	"description": "WMDE fundraising application (end user facing part)",
	"homepage": "https://github.com/wmde/FundraisingFrontend",
	"license": "GPL-2.0+",
	"require": {
		"php": ">=7.0",
		"ext-intl": "*",
		"ext-curl": "*",

		"silex/silex": "~1.3",
		"twig/twig": "~1.23",
		"pimple/pimple": "~1.0",

		"jeroen/file-fetcher": "~3.1",
		"wmde/fundraising-store": "dev-MembershipApplicationRepository",
		"addwiki/mediawiki-api-base": "~2.1",
		"psr/log": "~1.0",
		"monolog/monolog": "~1.17",
		"swiftmailer/swiftmailer": "~5.4",
		"symfony/translation": "^3.0",
		"symfony/twig-bridge": "^3.0",
		"twig/extensions": "^1.3",
		"micropayment-de/service-client": "~1.19.0"
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "micropayment-de/service-client",
				"version": "1.19.0",
				"dist": {
					"type": "zip",
					"url": "https://techdoc.micropayment.de/payment/serviceclient/download/mcp-serviceclient_1_19.zip",
					"reference": "1.19.0"
				},
				"autoload": {
					"classmap": [
						"lib",
						"services"
					],
					"files": [
						"lib/init.php"
					]
				}
			}
		}
	],
	"require-dev": {
		"ext-pdo_sqlite": "*",

		"phpunit/phpunit": "~5.4",
		"codeception/specify": "~0.4.3",
		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.4",
		"johnkary/phpunit-speedtrap": "^1.0",
		"mikey179/vfsStream": "~1.6",

		"squizlabs/php_codesniffer": "~2.5",
		"mediawiki/mediawiki-codesniffer": "~0.6.0",
		"phpmd/phpmd": "~2.3",

		"symfony/browser-kit": "~2.7",
		"silex/web-profiler": "~1.0",
		"sorien/silex-dbal-profiler": "~1.1"
	},
	"autoload": {
		"psr-4": {
			"WMDE\\Fundraising\\Frontend\\": "src/",
			"WMDE\\Fundraising\\Frontend\\App\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"WMDE\\Fundraising\\Frontend\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"vendor/bin/phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"@phpcs"
		],
		"ci": [
			"@test",
			"@cs",
			"npm run ci"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/ text phpmd.xml"
		]
	}
}
